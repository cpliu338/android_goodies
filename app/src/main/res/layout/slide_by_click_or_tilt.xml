<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent" android:text="@string/app_name"
        android:textAlignment="center"
        android:layout_height="wrap_content" android:id="@+id/feedback" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp" android:layout_weight=".15"
            android:id="@+id/minus" android:text="@string/minus" android:textSize="15pt"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp" android:text="@string/hint"
            android:layout_weight=".70" android:textAlignment="center"
            android:layout_height="wrap_content" android:id="@+id/hint" />
        <Button
            android:layout_width="0dp" android:layout_weight=".15"
            android:id="@+id/plus" android:text="@string/plus" android:textSize="15pt"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>