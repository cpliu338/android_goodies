<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.org.woodland.mytestbed">

    <uses-feature
        android:name="android.hardware.accelerometer"
        android:required="false" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FakeRingingActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <receiver android:name=".FakeCallReceiver" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hk.org.woodland.mytestbed.MainActivity" />
        </activity>
        <activity
            android:name="hk.org.woodland.lolo.LoloActivity"
            android:label="@string/lolo"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hk.org.woodland.mytestbed.MainActivity" />
        </activity>
        <activity
            android:name="hk.org.woodland.mongo.DutyActivity"
            android:label="@string/title_activity_duty"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hk.org.woodland.mytestbed.MainActivity" />
        </activity>
    </application>

</manifest>